@model IEnumerable<Category>

<ul class="list-group">

    <li class="list-group-item">
        <a class="nav-link text-dark" asp-area="" asp-controller="Articles" asp-action="Index">All Articles</a>
    </li>

    @foreach (var item in Model)
    {
    <li class="list-group-item">
        <a class="nav-link text-dark" asp-area="" asp-controller="Articles" asp-action="ArticlesByCategory" asp-route-categorySlug="@item.Slug">@item.Name</a>
    </li>
    }

</ul>